<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" metadata-complete="false" version="3.0">
	
   <context-param>
           <param-name>moduleName</param-name>
           <param-value>services.interviewApp</param-value>
   </context-param>
   
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
    <filter>
        <filter-name>WFFilter</filter-name>
        <filter-class>webFramework.WFFilter</filter-class>
    </filter>   
        <filter-mapping>
        <filter-name>WFFilter</filter-name>
        <url-pattern>*.faces</url-pattern>
                </filter-mapping>
        <filter-mapping>
        <filter-name>WFFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
     </filter-mapping>
    <filter-mapping>
        <filter-name>WFFilter</filter-name>
        <url-pattern>/*</url-pattern>
     </filter-mapping>
  
  
   <!--RestFul SErvices Configurations and mappings--> 
  
  <filter>
       <filter-name>SpringRestServiceFilter</filter-name>
       <filter-class>libraries.REST.filter.SpringRestServiceFilter</filter-class>
       <init-param>
         <param-name>auditLoggingEnabled</param-name>
         <param-value>false</param-value>
       </init-param>
        <init-param>
            <param-name>moduleName</param-name>
            <param-value>services.interviewApp</param-value>
        </init-param>
        <init-param>
            <param-name>contextFactory</param-name>
            <param-value>services.interviewApp.util.ContextFactory</param-value>
        </init-param>
      </filter>
    <filter-mapping>
       <filter-name>SpringRestServiceFilter</filter-name>
       <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <listener>
       <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/dispatcher-servlet.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
   <filter>
       <filter-name>springSecurityFilterChain</filter-name>
       <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
    <filter-mapping>
       <filter-name>springSecurityFilterChain</filter-name>
       <url-pattern>/api/*</url-pattern>
    </filter-mapping>
  
</web-app>
